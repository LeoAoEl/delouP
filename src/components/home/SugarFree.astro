---
import { getI18N } from "@i18n/index";
import { Image } from "astro:assets";
import StarImage from "@assets/images/star.webp";
import Container from "@components/Container.astro";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const { extendedLorem, sugar } = i18n.Common;
---

<aside
  class="bg-primary truncate overflow-hidden uppercase lg:flex flex-row justify-center lg:justify-between p-2 lg:p-4 font-noto"
>
  <span
    class="text-center lg:text-left lg:text-3xl text-deepRose font-bold text-sm"
    >{sugar}</span
  >
  <span
    class="text-center lg:text-left lg:text-3xl text-deepRose font-bold text-sm"
    >{sugar}</span
  >
  <span
    class="text-center lg:text-left lg:text-3xl text-deepRose font-bold text-sm"
    >{sugar}</span
  >
  <span
    class="text-center lg:text-left lg:text-3xl text-deepRose font-bold text-sm"
    >{sugar}</span
  >
  <span
    class="text-center lg:text-left lg:inline hidden lg:text-3xl text-deepRose font-bold text-sm"
    >{sugar}</span
  >
</aside>
<main class="bg-deepRose py-16">
  <Container
    className="flex lg:flex-row flex-col-reverse items-center justify-center place-content-center"
  >
    <picture class="lg:w-1/2">
      <Image
        src={StarImage}
        alt={"Shape of star"}
        loading={"lazy"}
        format={"avif"}
        quality={"low"}
        class={" drop-shadow-2xl"}
      />
    </picture>
    <section class="lg:w-1/2 lg:ml-12 uppercase font-cSoon leading-10">
      <span class="text-primary text-4xl lg:text-6xl lg:mb-8 font-bold">
        {sugar}</span
      >
      <p
        class="text-slate-100 lg:leading-10 text-2xl lg:text-4xl mt-4 lg:mt-4 mb-8 lg:mb-0"
      >
        {extendedLorem}
      </p>
    </section>
  </Container>
</main>
<aside
  class="bg-primary lg:flex flex-row justify-center p-2 text-center truncate overflow-hidden lg:p-4"
>
  <span
    class="text-sm lg:text-4xl text-deepRose font-bold text-center font-cSoon break-words"
    >Lorem ipsum dolor sit amet, consectetuer , Lorem ipsum dolor sit amet,</span
  >
</aside>
