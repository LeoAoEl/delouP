---
import Social from "@components/common/Social.astro";
import Container from "@components/Container.astro";
import Osos from "@components/common/Osos.astro";
import { getI18N } from "@i18n/index";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const { title, body } = i18n.Banner;
const { extendedLorem } = i18n.Common;
---

<main class="bg-lightRose py-16">
  <Container className=" flex lg:flex-row  flex-col justify-between">
    <section
      class="flex flex-col text-white justify-center text-center lg:text-left lg:w-2/3"
    >
      <div class="flex flex-col">
        <span class="text-primary text-5xl font-semibold mb-4 font-cSoon"
          >{title}</span
        >
        <p class="text-4xl font-extrabold text-white font-comic">
          {body}
        </p>
      </div>

      <div
        class="flex flex-col justify-center items-center pt-4 lg:items-start"
      >
        <div class="relative lg:w-2/4">
          <input
            type="email"
            placeholder="email"
            class="w-full py-2 pl-4 pr-16 text-slate-700 border rounded-full focus:outline-none focus:ring-2 focus:ring-deepPurple"
          />
          <button
            class="absolute text-lg font-semibold inset-y-0 right-0 px-4 py-2 text-deepRose bg-primary rounded-full font-cSoon"
          >
            LOREM IPSUM
          </button>
        </div>
        <div class="flex">
          <Osos />
        </div>
      </div>
    </section>
    <aside
      class="flex flex-col text-white justify-center lg:w-1/3 mt-16 lg:mt-0"
    >
      <span class="text-4xl text-center uppercase font-extrabold"
        >Follow us</span
      >
      <Social />
      <span class="text-par text-center mx-12 text-xl font-cSoon font-semibold"
        >{extendedLorem}</span
      >
    </aside>
  </Container>
</main>
