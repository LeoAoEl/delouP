---
import { Image } from "astro:assets";
import Right from "@assets/images/2.webp";
import Left from "@assets/images/3.webp";
const left = [
  { orange: "0 g", slate: "Azúcar" },
  { orange: "14,5 g", slate: "Fibra" },
  { orange: "18", slate: "KCAL" },
  { orange: "Colores y sabores", slate: "Naturales" },
];
const right = [
  { indigo: "49,8 g", slate: "Azúcar" },
  { indigo: "0 g", slate: "Fibra" },
  { indigo: "318", slate: "KCAL" },
  { indigo: "Colores y sabores", slate: "Artificiales" },
];
---

<main class="flex lg:flex-row justify-between overflow-hidden flex-col">
  <picture class="lg:flex hidden lg:w-1/3 lg:h-1/3 -translate-x-10">
    <Image
      src={Left}
      loading={"eager"}
      alt={"Deolu Gomas"}
      class={"rotate-45 pt-32 hover:rotate-0 drop-shadow-2xl transition-all ease-in cursor-pointer"}
    />
  </picture>
  <section class="text-center flex items-center justify-center">
    <div class="p-8">
      <div class="grid grid-cols-4 gap-4 divide-x-2 divide-gray-400">
        <div class="col-span-2 flex flex-col">
          <span class="text-naranja text-2xl lg:text-5xl p-4 font-bold"
            >Deloü</span
          >
          {
            left.map((item) => (
              <div class="flex flex-col border-slate-400 lg:mt-8 border-t-2 py-4">
                <span class=" text-xl lg:text-3xl font-bold text-naranja">
                  {item.orange}
                </span>
                <span class="text-xl text-slate-700 font-bold lg:text-3xl">
                  {item.slate}
                </span>
              </div>
            ))
          }
        </div>
        <div class="col-span-2 flex-col flex pl-4">
          <span class="text-deepPurple font-bold text-3xl lg:text-5xl p-4">
            gomitas</span
          >
          {
            right.map((item) => (
              <div class="flex flex-col border-slate-400 lg:mt-8 border-t-2 py-4">
                <span class=" text-xl lg:text-3xl font-bold  text-deepPurple">
                  {item.indigo}
                </span>
                <span class=" text-xl font-bold lg:text-3xl text-slate-700">
                  {item.slate}
                </span>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <picture class="lg:flex hidden lg:w-1/3 lg:h-2/3 translate-x-10">
    <Image
      src={Right}
      loading={"eager"}
      alt={"Deolu Gomas"}
      class={" -rotate-45 pt-32 hover:-translate-x-20 drop-shadow-2xl hover:-rotate-0 transition-all ease-in cursor-pointer"}
    />
  </picture>
</main>
