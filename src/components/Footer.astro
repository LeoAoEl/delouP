---
import Container from "@components/Container.astro";
import { getI18N } from "@i18n/index";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const { left, right } = i18n.Footer;
---

<footer class="bg-footerBg">
  <Container>
    <div class="pt-8">
      <div
        class="flex p-8 bg-footerAcentuate lg:justify-start justify-center lg:w-2/3 w-full rounded-md"
      >
        <span
          class="text-7xl font-cSoon uppercase text-white text-center lg:text-left"
          >Delo√º</span
        >
      </div>
    </div>
    <section class="flex flex-row">
      <div class="p-8 lg:w-2/3 mx-auto lg:mx-0">
        <aside
          class="flex items-center lg:text-left flex-col lg:flex-row text-center justify-center lg:justify-between"
        >
          <section class="flex flex-col gap-4">
            {
              left.map((item) => (
                <span class=" text-gray-300 text-lg text-pretty hover:underline font-comic transition-all cursor-pointer ease-in">
                  {item}
                </span>
              ))
            }
          </section>
          <section class="flex flex-col gap-4 lg:ml-8">
            {
              right.map((item) => (
                <span class=" text-gray-300 text-lg text-pretty font-comic hover:underline transition-all cursor-pointer ease-in">
                  {item}
                </span>
              ))
            }
          </section>
        </aside>
      </div>

      <div
        class="p-8 hidden lg:flex lg:w-1/3 mx-auto lg:mx-0 justify-end pt-60"
      >
        <div class="flex p-8 bg-footerAcentuate w-full rounded-md h-40"></div>
      </div>
    </section>
  </Container>
</footer>
